@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    ViewData["AuthTitle"] = "Forgot Password";
    ViewData["AuthSubtitle"] = "Request a reset token";
    Layout = "~/Views/Shared/_AuthCard.cshtml";
}
<form asp-action="ForgotPassword" method="post" class="auth-form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
    <div class="mb-3">
        <label asp-for="UsernameOrEmail" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="UsernameOrEmail" class="form-control" placeholder="your username or email" autocomplete="username" />
        <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-3">Request Token</button>
    <div class="text-center mb-2">
        <a asp-action="Login" class="small text-decoration-none">Back to login</a>
    </div>
    <div class="alert alert-info small mb-0">
        In development the token will be shown after submit.
    </div>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }