@{
    ViewData["Title"] = "Password Recovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0" style="border-radius: 20px;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-key-fill text-warning" style="font-size: 4rem;"></i>
                            <h2 class="card-title mt-3 fw-bold">Password Recovery</h2>
                            <p class="text-muted">Need help accessing your account?</p>
                        </div>

                        <div class="alert alert-info border-0" style="background: rgba(13, 110, 253, 0.1); border-radius: 15px;">
                            <h5 class="alert-heading">
                                <i class="bi bi-info-circle me-2"></i>Enterprise Security Policy
                            </h5>
                            <p class="mb-2">For security reasons, password recovery is handled by your system administrator.</p>
                            <hr style="border-color: rgba(13, 110, 253, 0.2);">
                            <p class="mb-0 small">Self-service password reset is not available in this enterprise environment.</p>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-12">
                                <div class="card border-0" style="background: rgba(25, 135, 84, 0.1); border-radius: 15px;">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-success mb-2">
                                            <i class="bi bi-telephone-fill me-2"></i>Contact IT Support
                                        </h6>
                                        <p class="card-text small mb-1">ðŸ“§ Email: <strong>it-support@company.com</strong></p>
                                        <p class="card-text small mb-1">ðŸ“ž Phone: <strong>+1 (555) 123-4567</strong></p>
                                        <p class="card-text small mb-0">ðŸ•’ Hours: Monday - Friday, 9:00 AM - 5:00 PM</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-12">
                                <div class="card border-0" style="background: rgba(220, 53, 69, 0.1); border-radius: 15px;">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-danger mb-2">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>Emergency Access
                                        </h6>
                                        <p class="card-text small mb-1">For urgent access outside business hours:</p>
                                        <p class="card-text small mb-0">ðŸ“± Emergency Hotline: <strong>+1 (555) 911-HELP</strong></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning border-0 mt-4" style="background: rgba(255, 193, 7, 0.1); border-radius: 15px;">
                            <h6 class="mb-2">
                                <i class="bi bi-shield-lock me-2"></i>Required Information
                            </h6>
                            <small>When contacting support, please provide:</small>
                            <ul class="small mb-0 mt-1">
                                <li>Your employee ID</li>
                                <li>Full name and department</li>
                                <li>Business justification for access</li>
                                <li>Manager approval (if applicable)</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a asp-action="Login" class="btn btn-primary btn-lg" 
                               style="background: linear-gradient(45deg, #667eea, #764ba2); border: none; border-radius: 15px;">
                                <i class="bi bi-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>

                        <div class="text-center mt-4">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>
                                Password recovery requests are typically processed within 2-4 business hours
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>