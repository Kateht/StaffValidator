@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    ViewData["AuthTitle"] = "Reset Password";
    ViewData["AuthSubtitle"] = "Enter the token and your new password";
    Layout = "~/Views/Shared/_AuthCard.cshtml";
}
<form asp-action="ResetPassword" method="post" class="auth-form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

    <div class="mb-3">
        <label asp-for="Token" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="Token" class="form-control" placeholder="paste your reset token" />
        <span asp-validation-for="Token" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="NewPassword" class="form-control" autocomplete="new-password" placeholder="New strong password" />
        <span asp-validation-for="NewPassword" class="text-danger small"></span>
        <small class="text-muted">At least 6 chars, 1 uppercase, 1 number</small>
    </div>

    <div class="mb-4">
        <label asp-for="ConfirmPassword" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm new password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Reset Password</button>

    <div class="text-center mt-3">
        <a asp-action="Login" class="small text-decoration-none">Back to login</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
