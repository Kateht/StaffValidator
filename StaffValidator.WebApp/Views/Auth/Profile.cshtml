@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-person-circle me-2"></i>User Profile
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="profile-avatar mb-3">
                                <i class="bi bi-person-circle text-primary" style="font-size: 8rem;"></i>
                            </div>
                            <h4 class="fw-bold">@Model.Username</h4>
                            <span class="badge bg-info fs-6">@Model.Role</span>
                        </div>
                        <div class="col-md-8">
                            <div class="profile-info">
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <label class="form-label fw-bold">Username:</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">@Model.Username</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <label class="form-label fw-bold">Email:</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">@Model.Email</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <label class="form-label fw-bold">Role:</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <p class="form-control-plaintext">@Model.Role</p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-4">
                                        <label class="form-label fw-bold">Account Status:</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <span class="badge bg-success">Active</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">Permissions</h5>
                            <div class="row">
                                @if(Model.Role == "Administrator")
                                {
                                    <div class="col-md-6">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>Full System Access</li>
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>User Management</li>
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>Staff CRUD Operations</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>System Configuration</li>
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>View All Logs</li>
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>Export Data</li>
                                        </ul>
                                    </div>
                                }
                                else if(Model.Role == "Manager")
                                {
                                    <div class="col-md-6">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>Staff CRUD Operations</li>
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>View Staff Reports</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>Export Staff Data</li>
                                            <li class="list-group-item"><i class="bi bi-x-circle text-muted me-2"></i>System Configuration</li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-6">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>View Staff Information</li>
                                            <li class="list-group-item"><i class="bi bi-check-circle text-success me-2"></i>Add New Staff</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><i class="bi bi-x-circle text-muted me-2"></i>Edit Existing Staff</li>
                                            <li class="list-group-item"><i class="bi bi-x-circle text-muted me-2"></i>System Configuration</li>
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Staff" asp-action="Index" class="btn btn-primary me-2">
                        <i class="bi bi-arrow-left me-2"></i>Back to Staff List
                    </a>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>