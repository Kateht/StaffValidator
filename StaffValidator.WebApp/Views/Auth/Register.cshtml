@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["AuthTitle"] = "Create Account";
    ViewData["AuthSubtitle"] = "Join Staff Validator";
    Layout = "~/Views/Shared/_AuthCard.cshtml";
}
<form asp-action="Register" asp-controller="Auth" method="post" class="auth-form">
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
    <div class="mb-3">
        <label asp-for="Username" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="Username" class="form-control" placeholder="username" autocomplete="username" />
        <span asp-validation-for="Username" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="Email" class="form-control" placeholder="email@example.com" autocomplete="email" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder="New strong password" />
        <span asp-validation-for="Password" class="text-danger small"></span>
        <small class="text-muted">At least 6 chars, 1 uppercase, 1 number</small>
    </div>
    <div class="mb-4">
        <label asp-for="ConfirmPassword" class="form-label small fw-semibold text-uppercase"></label>
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100 mb-2">Create Account</button>
    <div class="text-center small">
        <a asp-action="Login" class="text-decoration-none">Already have an account? Login</a>
    </div>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }