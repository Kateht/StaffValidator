root = true

[*.cs]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = crlf
insert_final_newline = true

dotnet_sort_system_directives_first = true
csharp_style_var_elsewhere = true:suggestion
csharp_prefer_braces = true:warning

[*.{cshtml,html,css,js}]
indent_style = space
indent_size = 2
